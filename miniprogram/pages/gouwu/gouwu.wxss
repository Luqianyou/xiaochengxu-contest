.Gouwu_container{
  height: 100%;
  background-color: #F4F4F4;
}

.Gouwubox{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.Gouwu_title{
  display: flex;
  background-color: white;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

/* 左侧设置 */
.Gouwuleft image{
  width: 300rpx;
  height: 200rpx;
  margin-left: 10rpx;
}

/* 右侧设置 */
.Gouwuright{
  flex: 60%;
}
.Gouwuright .righttitle{
text-align: center;
font-family: cursive;
font-weight: bold;
font-size: 40rpx;
}

.Gouwuright .Gouwusl{
  float: right;
  display: flex;
  margin-top: 50rpx;
}

.Gouwuright .price{
  margin-top: 50rpx;
  margin-right: 150rpx;
  color: red;
}

/* 底部设置 */
.Gouwubottom{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  line-height: 100rpx;
  background-color: white;
}

.Gouwubottom .allprice{
  float: left;
  margin-left: 30rpx;
}

.Gouwubottom .jiebutton{
  float: right;
  border: 3rpx solid red;
  border-radius: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  color:white;
  background-color: red;
  padding: 20rpx 30rpx;
  padding-top: 0;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

.deletshop{
  border-radius: 20rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  background-color: #9999ff;
  margin-right: 20rpx;
  margin-top: 50rpx;
  color: white;
}