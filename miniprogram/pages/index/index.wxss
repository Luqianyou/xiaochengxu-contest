/* pages/index/index.wxss */
@import "/iconfong/iconfont.wxss";
page{
  background-color:#F4F4F4;
  height: 100%;
}

.indexContainer{
  height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

/* 导航搜索区 */
.indexContainer .top{
  display: flex;
  margin: 20rpx 0;
}
.indexContainer .top .image{
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
}

.indexContainer .top .search{
  border:1px solid #eee;
  margin: 0 20rpx;
  flex: 2;
  border-radius: 10rpx;
  text-align: center;
  margin: 0 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  color:black;
  background-color: #FFCC00;
}

/* 轮播图样式 */
.banner{
  width: 100%;
  height: 350rpx;
  border-radius:20rpx;
  overflow: hidden;
}

.banner image{
  width: 100%;
  height: 100%;
}

/* 图标导航区域样式 */
.navContainer{
  display: flex;
  flex-wrap: wrap;
}
