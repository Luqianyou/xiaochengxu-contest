/* 推荐菜单 */
.recommerdcontainer{
padding: 20rpx;
padding-top: 0;
background: #fff;
margin: 20rpx;
border-radius: 30rpx;
}

/* 大图标区域 */
.recommerdcontainer .bigrecommer{
  width: 100%;
  height: 300rpx;
  margin: 30rpx 0;
}

.recommerdcontainer .bigrecommer image{
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}

/* 内容推荐区 */
.recommendScroll{
  display: flex;
  height: 350rpx;
}

.scrollItem{
  width: 300rpx;
  margin-right: 20rpx;
  text-align: center;
}

.scrollItem image{
width: 300rpx;
height: 300rpx;
border-radius: 10rpx;
}

.scrollItem text{
  font-size: 26rpx;
  font-family: cursive;
  font-weight: bold;
}

/* 底部设置 */
.bottom{
  margin: 20rpx 0;
  text-align: center;
}

.bottom text{
