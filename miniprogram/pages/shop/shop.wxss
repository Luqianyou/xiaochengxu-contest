@import "/iconfong/iconfont.wxss";
page{
  background-color:#F4F4F4;
}

.shopContainer{
  box-sizing: border-box;
}

/* 轮播图 */
.banner{
  width: 100%;
  height: calc(100vw*348/750);
  margin-bottom: 10rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}

/* 内容主体 */
.menu{
  height:calc(100vh - calc(100vw*348/750)) ;
  text-align: center;
  overflow: hidden;
}

/* 左侧导航栏 */
.navLeft{
  width: 30%;
  height:100%;
  float: left;
  border-right: 1px solid #ccc;
  box-sizing: border-box;
 }

 /* 左侧样式 */
 .navLeft view{
   height: 80rpx;
   line-height: 80rpx;
   border-bottom: 1px solid #ccc;
   background-color: #fff;
   position: relative;
 }

 .navLeft view text{
   float: left;
   margin-left: 40rpx;
 }

 .navLeft view::before{
   content: '';
   width: 8rpx;
   height: 100%;
   position: absolute;
   left: 0;
   top: 0;
   background: transparent;
 }

/* 左侧点击样式 */
 .navLeft view.active{
   background-color: #efefef;
 }

 .navLeft view.active::before{
  background: #9999ff;
 }

 /* 右侧内容区域 */
 .menuRight{
   width: 70%;
   float: right;
   height:calc(100vh - calc(100vw*348/750)) ;
 }

 .menuRight .box{
padding: 0 15rpx;
box-sizing: border-box;
 }

 .box .box_title{
   height: 60rpx;
   line-height: 60rpx;
   font-weight: bold;
   text-align: start;
   padding-left: 20rpx;
 }

 .box .box_content{
   background-color: #fff;
   display: flex;
   justify-content: flex-start;
   flex-wrap: wrap;
 }

 .box .box_content view{
   width: 32%;
   text-align: center;
   margin-left: 1%;
   padding: 10rpx 0;
 }

 .box:last-child{
    margin-bottom: 600rpx;
 }

 .menufood{
   width: 90%;
   height: 130rpx;
   display: block;
   margin: auto;
   overflow: hidden;
 }

 .box .box_content view text{
   display: block;
   width: 100%;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
 }



